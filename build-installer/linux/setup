#!/bin/bash

if [ -x "$(command -v dnf)" ]
then
	sudo dnf install -y python3{,-tkinter,-pip} && python3 -m pip install nuitka && sudo mv ./cpc /usr/local/bin && sudo mv ./uninstall-cpc /usr/local/bin
elif [ -x "$(command -v apt)" ]
then
	sudo apt install -y python3{,-tk,-pip} && python3 -m pip install nuitka && sudo mv ./cpc /usr/local/bin && sudo mv ./uninstall-cpc /usr/local/bin
else
	echo "ERROR: Cannot Detect Package Manager!"
fi